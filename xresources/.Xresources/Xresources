#include "gruvbox-dark.resources"
Xcursor.size: 12px

Xft.antialias:              true
Xft.rgba:                   rgb
Xft.hinting:                true
Xft.hintstyle:              hintsmedium

! URxvt config
! ===========

URxvt*font: \
            xft:Comic Mono:style=Normal:antialias=true:size=12:minspace=False, \
            xft:UbuntuMono Nerd Font Mono:style=Regular:antialias=true:size=12:minspace=False, \
            xft:SauceCodePro Nerd Font:style=Regular:antialias=true:size=12:minspace=False, \
            xft:DejaVuSansMono Nerd Font:antialias=true:size=12:minspace=False, \
            xft:DroidSansMono Nerd Font Mono:antialias=true:size=12, \
            xft:FuraMono NF:size=12:antialias=true:minspace=False, \
            xft:RobotoMono Nerd Font:antialias=true:size=12:minspace=False, \
            xft:Noto Sans Mono:antialias=true:size=12:minspace=False, \
            xft:Monospace:style=Medium:antialias=true:minspace=False
URxvt*boldFont: \
            xft:Comic Mono:style=Bold:antialias=true:size=12:minspace=False, \
            xft:UbuntuMono Nerd Font Mono:style=Regular:antialias=true:size=12:minspace=False, \
            xft:SauceCodePro Nerd Font:style=Medium:antialias=true:size=12:minspace=False, \
            xft:DejaVuSansMono Nerd Font:antialias=true:size=12:minspace=False, \
            xft:DroidSansMono Nerd Font Mono:antialias=true:size=12, \
            xft:FuraMono NF:size=12:antialias=true:minspace=False, \
            xft:RobotoMono Nerd Font:antialias=true:size=12:minspace=False, \
            xft:Noto Sans Mono:antialias=true:size=12:minspace=False, \
            xft:Monospace:style=Medium:antialias=true:minspace=False
URxvt*scrollBar: false
URxvt*transparent: false
URxvt*depth: 24
!URxvt*bg: '[80]#222222'
URxvt*shading: 0
URxvt*cursorColor: #00FF00
URxvt*letterSpace: -1
URxvt.perl-ext-common: default,resize-font
URxvt.resize-font.step: 1

URxvt*geometry: 80x240+0+0

! Interaction
! ===========

! allow filepaths to select as one, otherwise delimit
URxvt.cutchars: "\"(),<>[]{}|'`"

! For clickable urls (RMB), not an exact match to gnome-shell.
URxvt.url-launcher: xdg-open
URxvt.matcher.button: 3

! Key Bindings
! ============

! Copy/Paste, same keys as gnome-terminal
! https://stackoverflow.com/questions/39884093
! Disable ISO 14755 unicode input so we can use Ctrl-Shift bindings
URxvt.iso14755:        false
URxvt.iso14755_52:     false
! Disable Ctrl-Alt-c & Ctrl-Alt-v bindings (optional)
URxvt.keysym.C-M-c:    builtin-string:
URxvt.keysym.C-M-v:    builtin-string:
! Bind Ctrl-Shift-c & Ctrl-Shift-v to copy and paste
! I dont know why, but I needed to use hex keysym values to get it to work
URxvt.keysym.C-S-0x43: eval:selection_to_clipboard
URxvt.keysym.C-S-0x56: eval:paste_clipboard

! clear the scrollback
! URxvt.keysym.Control-l: command:\033c

URxvt.keysym.Shift-Return: \033[27;2;13~
