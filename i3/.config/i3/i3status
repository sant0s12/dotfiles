	format = "%status %percentage %remaining"
	last_full_capacity = true
	low_threshold = 5
	threshold_type = percentage
	status_chr = "ğŸ”Œ"
	status_bat = "ğŸ”‹"
	status_unk = "âšªï¸"
	status_full = "ğŸ‘Œ"
}

disk "/" {
        format = "ğŸ’¾ %avail"
}

