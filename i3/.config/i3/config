# Set displays
exec_always --no-startup-id xrandr --output eDP1 --primary && xrandr --output HDMI1 --auto --above eDP1

# Start compositor
exec_always --no-startup-id  "(killall picom ; sleep .5) && picom --experimental-backends"

# Start dunst
exec_always --no-startup-id "(killall dunst ; sleep .5) && dunst"

# Set wallpaper and theme
exec --no-startup-id setwallpaper
exec_always --no-startup-id "[[ -f ~/.Xresources/Xresources]] && xrdb -merge -I$HOME ~/.Xresources/Xresources"

# Start polybar
